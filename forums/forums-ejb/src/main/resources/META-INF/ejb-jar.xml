<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <description>no description</description>
  <display-name>ForumJar</display-name>
  <enterprise-beans>
    <session>
      <description>no description</description>
      <display-name>ejb/ForumsBM</display-name>
      <ejb-name>ejb/ForumsBM</ejb-name>
      <home>com.stratelia.webactiv.forums.forumsManager.ejb.ForumsBMHome</home>
      <remote>com.stratelia.webactiv.forums.forumsManager.ejb.ForumsBM</remote>
      <ejb-class>com.stratelia.webactiv.forums.forumsManager.ejb.ForumsBMEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
	<res-ref-name>jdbc/Silverpeas</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
	<container-transaction>
		<method>
			<ejb-name>ejb/ForumsBM</ejb-name>
			<method-name>*</method-name>
		</method>
		<trans-attribute>NotSupported</trans-attribute>
	</container-transaction>
    <container-transaction>
      <method>
				<ejb-name>ejb/ForumsBM</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>deleteForum</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
				<ejb-name>ejb/ForumsBM</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>deleteMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
				<ejb-name>ejb/ForumsBM</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>moveMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>

