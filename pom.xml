<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>  
  <parent>    
    <groupId>com.silverpeas</groupId>
    <artifactId>parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../parent/pom.xml</relativePath>
  </parent>
  
  
  <groupId>com.silverpeas</groupId>
  <artifactId>components</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>  
  <name>Components</name>
  
   <properties>
    <config.version>1.0-SNAPSHOT</config.version>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors><descriptor>assemblies/assembly.xml</descriptor></descriptors>
          <appendAssemblyId>true</appendAssemblyId>
          <attach>true</attach>
          <skipAssembly>true</skipAssembly>
          <finalName>${artifactId}-${version}-configuration</finalName>
        </configuration>
        <executions>
          <execution>
            <id>manage-configuration</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.silverpeas</groupId>
            <artifactId>assembly-configuration</artifactId>
            <version>1.0-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.silverpeas.services</groupId>
        <artifactId>code-formatter-plugin</artifactId>
        <configuration>
          <configurationFile>formatter/formatter.prefs</configurationFile>
        </configuration>
        <executions>
          <execution>
            <id>format</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.silverpeas</groupId>
            <artifactId>assembly-configuration</artifactId>
            <version>${config.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>license</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.google.code.maven-license-plugin</groupId>
            <artifactId>maven-license-plugin</artifactId>
            <configuration>
              <header>license/silverpeas-license.txt</header>
              <quiet>true</quiet>
              <excludes>
                <exclude>**/*.txt</exclude>
                <exclude>**/*.sql</exclude>
                <exclude>**/*.js</exclude>
                <exclude>**/*.html</exclude>
              </excludes>
            </configuration>
            <executions>
              <execution>
                <id>header</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>format</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>com.silverpeas</groupId>
                <artifactId>assembly-configuration</artifactId>
                <version>${config.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
 

  <modules>
    <module>hyperlink</module>
    <module>quickinfo</module>
    <module>quizz</module>
    <module>jdbc-connector</module>
    <module>rssaggregator</module>
    <module>mydb</module>
    <module>project-manager</module>
    <module>websites</module>
    <module>question-reply</module>
    <module>whitepages</module>
    <module>webpages</module>
    <module>chat</module>
    <module>mailinglist</module>
    <module>infoletter</module>
    <module>wiki</module>
    <module>almanach</module>
    <module>yellowpages</module>
    <module>silvercrawler</module>
    <module>resources-manager</module>
    <module>process-manager</module>
    <module>forums</module>
    <module>blog</module>
    <module>survey</module>
    <module>gallery</module>
    <module>newsedito</module>
    <module>kmelia</module>
  </modules>
  
</project>