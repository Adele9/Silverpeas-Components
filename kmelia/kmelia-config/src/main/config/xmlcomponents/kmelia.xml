<WAComponent xmlns="http://silverpeas.org/xml/ns/component"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://silverpeas.org/xml/ns/component file:///home/ehugonnet/silverpeas_dev/core/config-core/src/main/config/xmlcomponents/component.xsd">
  <name>kmelia</name>
  <label>Gestion documentaire I - Theme Tracker</label>
  <description>Permet de fédérer et structurer la documentation par répertoires thématiques
    arborescents. De nombreuses fonctions associées peuvent être activées : forumlaire d'entête XML
    et méta-données associées, gestion de fichiers joints de formats Office, PDF, html, gestion de
    version des fichiers joints, gestion d'un workflow multi-étapes de validation / approbation,
    indexation manuelle sur le Plan de Classement Silverpeas, contrôle de lecture,
    gestion de commentaires, abonnement à un dossier ou un fichier, alerte de publication.
  </description>
  <suite>01 Gestion Documentaire</suite>
  <visible>yes</visible>
  <visibleInPersonalSpace>yes</visibleInPersonalSpace>
  <portlet>yes</portlet>
  <instanceClassName>com.stratelia.webactiv.kmelia.KmeliaInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">Gestionnaires</profile>
    <profile name="publisher">Publieurs</profile>
    <profile name="writer">Rédacteurs</profile>
    <profile name="user">Lecteurs</profile>
    <!--<profile name="supervisor">Superviseurs</profile>-->
  </profiles>
  <Parameters>
    <Parameter>
      <name>nbPubliOnRoot</name>
      <ParameterLabel>Nb dernières publi</ParameterLabel>
      <ParameterValue>15</ParameterValue>
      <ParameterSize>5</ParameterSize>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>1</ParameterOrder>
      <ParameterHelp>
        <fr>Permet de définir le nombre de dernières publications affichées sur la
          page d'accueil du composant. La création de publication à la racine est impossible.
          Si la valeur saisie est égale à 0, la publication à la racine est alors possible mais
          les dernières publications ne sont pas affichées sur la page d'accueil.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>nbPubliPerPage</name>
      <ParameterLabel>Nb Publi / Page</ParameterLabel>
      <ParameterValue></ParameterValue>
      <ParameterSize>5</ParameterSize>
      <ParameterMandatory>N</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>2</ParameterOrder>
      <ParameterHelp>
        <fr>Permet de définir le nombre de publications affichées par page.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>isTree</name>
      <ParameterLabel>Gestion arborescente</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>OnCreationOnly</ParameterUpdatable>
      <ParameterOrder>3</ParameterOrder>
      <ParameterHelp>
        <fr>Active l'organisation arborescente de thèmes. Une publication peut être
          placée dans plusieurs thèmes.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>usePdc</name>
      <ParameterLabel>Classification PDC</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>4</ParameterOrder>
      <ParameterHelp>
        <fr>Les publications créées au sein de cette instance pourront être classées
          sur le Plan de Classement
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>tabContent</name>
      <ParameterLabel>Contenu</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>5</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>tabAttachments</name>
      <ParameterLabel>Fichiers Joints</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>6</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>tabSeeAlso</name>
      <ParameterLabel>Voir Aussi</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>7</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>tabAccessPaths</name>
      <ParameterLabel>Emplacements Multiples</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterValueForPersonalSpace>no</ParameterValueForPersonalSpace>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>8</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>tabReadersList</name>
      <ParameterLabel>Contrôles de Lecture</ParameterLabel>
      <ParameterValue>yes</ParameterValue>
      <ParameterValueForPersonalSpace>no</ParameterValueForPersonalSpace>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>9</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>tabComments</name>
      <ParameterLabel>Commentaires</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>10</ParameterOrder>
    </Parameter>
    <Parameter>
      <name>versionControl</name>
      <ParameterLabel>Versioning</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>OnCreationOnly</ParameterUpdatable>
      <ParameterOrder>11</ParameterOrder>
      <ParameterHelp>
        <fr>Permet de gérer les versions des fichiers joints. Ce paramêtre n'est
          modifiable qu'à la création de l'instance
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>versionUseFileRights</name>
      <ParameterLabel>Droits sur les fichiers</ParameterLabel>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>OnCreationOnly</ParameterUpdatable>
      <ParameterType>select</ParameterType>
      <ParameterOrder>12</ParameterOrder>
      <ParameterHelp>
        <fr>Droits sur les fichiers versionnés: Rédacteurs et Lecteurs,
          Rédacteurs seulement, Lecteurs seulement ou droits hérités du composant.
        </fr>
        <en>Access rights on the files with versions : Writers and readers,
          Writers only, Readers onley ou rights inherited from the component.
        </en>
      </ParameterHelp>
      <ParameterOptions>
        <ParameterOption>
          <Name>Rédacteurs et Lecteurs</Name>
          <Value>0</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Rédacteurs</Name>
          <Value>1</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Lecteurs</Name>
          <Value>2</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Droits hérités</Name>
          <Value>3</Value>
        </ParameterOption>
      </ParameterOptions>
    </Parameter>

    <Parameter>
      <name>draft</name>
      <ParameterLabel>Mode brouillon</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>13</ParameterOrder>
      <ParameterHelp>
        <fr>Le mode brouillon permet de travailler sur une publication sans que
          personne d'autre puisse la voir.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>webContent</name>
      <ParameterLabel>Orienté contenu Web</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>14</ParameterOrder>
      <ParameterHelp>
        <fr>Permet d'activer les fonctions liées à la gestion de contenu web (wysiwyg
          associé au thème, visibilité des thèmes)
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>delegatedTopicManagement</name>
      <ParameterLabel>Gestion déléguée des thèmes</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>never</ParameterUpdatable>
      <ParameterOrder>16</ParameterOrder>
      <ParameterHelp>
        <fr>La gestion des thèmes est déléguée aux publieurs et rédacteurs
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>useAuthor</name>
      <ParameterLabel>Champ Auteur</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>17</ParameterOrder>
      <ParameterHelp>
        <fr>Les documents créés au sein de cette instance pourront comporter une champ
          supplémentaire 'Auteur'.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>openSingleAttachment</name>
      <ParameterLabel>Ouverture directe fichier joint</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterType>checkbox</ParameterType>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>18</ParameterOrder>
      <ParameterHelp>
        <fr>Si une publication contient un seul fichier joint alors l'ouverture de la
          publication déclenche automatiquement l'ouverture du fichier joint.
        </fr>
        <en></en>
      </ParameterHelp>
    </Parameter>

    <Parameter>
      <name>importFiles</name>
      <ParameterLabel>Importation de document(s)</ParameterLabel>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>select</ParameterType>
      <ParameterOrder>19</ParameterOrder>
      <ParameterHelp>
        <fr>Valeurs possibles: 0=Non 1=Import unitaire 2=Import massif 3=Import
          unitaire et massif
        </fr>
        <en></en>
      </ParameterHelp>
      <ParameterOptions>
        <ParameterOption>
          <Name>Non</Name>
          <Value>0</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Import unitaire</Name>
          <Value>1</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Import massif</Name>
          <Value>2</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Tous</Name>
          <Value>3</Value>
        </ParameterOption>
      </ParameterOptions>
    </Parameter>

    <Parameter>
      <name>targetValidation</name>
      <ParameterLabel>Validation de publication</ParameterLabel>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>select</ParameterType>
      <ParameterOrder>20</ParameterOrder>
      <ParameterHelp>
        <fr>Classique : un valideur doit valider la publication, Ciblée (un seul
          valideur) : Le rédacteur choisit le valideur devant valider la publication. Ceci permet
          d'éviter le phénomène de spam auprès des publieurs, Ciblée (plusieurs valideurs) : Le
          rédacteur choisit les valideurs, Collégiale : Tous les valideurs doivent valider la
          publication.
        </fr>
        <en>Classical : once validator must validate publication, Ciblée (un seul
          valideur) : Writer choose one validator. This avoid spam behaviour., Ciblée (plusieurs
          valideurs) : Writer choose many validators, Collégiale : All validators must validate
          publication
        </en>
      </ParameterHelp>
      <ParameterOptions>
        <ParameterOption>
          <Name>Classique</Name>
          <Value>0</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Ciblée (un seul valideur)</Name>
          <Value>1</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Ciblée (plusieurs valideurs)</Name>
          <Value>2</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Collégiale</Name>
          <Value>3</Value>
        </ParameterOption>
      </ParameterOptions>
    </Parameter>

    <Parameter>
      <name>exportComponent</name>
      <ParameterLabel>Exportation du composant</ParameterLabel>
      <!-- ParameterValue>no</ParameterValue -->
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>select</ParameterType>
      <ParameterOrder>21</ParameterOrder>
      <ParameterHelp>
        <fr>Cette fonction permet d'exporter toutes les publications visibles du
          composant.
        </fr>
        <en>This function allow the user to export all the visible publications in the
          component
        </en>
      </ParameterHelp>
      <ParameterOptions>
        <ParameterOption>
          <Name>Non</Name>
          <Value>no</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Au format ZIP</Name>
          <Value>yes</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Des fichiers PDF</Name>
          <Value>pdf</Value>
        </ParameterOption>
        <ParameterOption>
          <Name>Tous</Name>
          <Value>both</Value>
        </ParameterOption>
      </ParameterOptions>
    </Parameter>

    <Parameter>
      <name>massiveDragAndDrop</name>
      <ParameterLabel>Drag And Drop</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>22</ParameterOrder>
      <ParameterHelp>
        <fr>Cette fonction permet de créer des thèmes et des publications par
          glisser/déposer dans une zone de l'écran.
        </fr>
        <en>This function allow to the manager to create topics and publications using
          a simple drag and drop.
        </en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>coWriting</name>
      <ParameterLabel>Co Rédaction</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>23</ParameterOrder>
      <ParameterHelp>
        <fr>Cette fonction permet à un rédacteur de pouvoir modifier n'importe quelle
          publication.
        </fr>
        <en>This function makes it possible to a writer to modify any publications.
        </en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>publicationAlwaysVisible</name>
      <ParameterLabel>Publication toujours visible</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>24</ParameterOrder>
      <ParameterHelp>
        <fr>La dernière version validée d'une publication est toujours visible même
          lorsqu'elle est en attente de validation.
        </fr>
        <en>The latest valid version of a publication is always visible even if it is
          waiting approval.
        </en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>wizardEnabled</name>
      <ParameterLabel>Assistant de publication</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>25</ParameterOrder>
      <ParameterHelp>
        <fr>Dédié aux utilisateurs débutants, cet assistant permet de créer une
          publication pas à pas.
        </fr>
        <en>For beginners only. This wizard allows the user to create a publication
          step by step.
        </en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>displayNB</name>
      <ParameterLabel>Affichage nombre de publications</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>27</ParameterOrder>
      <ParameterHelp>
        <fr>Affiche le nombre de publications par thème</fr>
        <en>Display the number of publications by topic</en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>rightsOnTopics</name>
      <ParameterLabel>Droits sur les thèmes</ParameterLabel>
      <ParameterValue>no</ParameterValue>
      <ParameterMandatory>Y</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterType>checkbox</ParameterType>
      <ParameterOrder>28</ParameterOrder>
      <ParameterHelp>
        <fr>Permet de définir des droits d'accès au niveau des thèmes</fr>
        <en>Allow to define rights on topics</en>
      </ParameterHelp>
    </Parameter>
    <Parameter>
      <name>nbDayForReservation</name>
      <ParameterLabel>Gestion des retards</ParameterLabel>
      <ParameterValue></ParameterValue>
      <ParameterSize>5</ParameterSize>
      <ParameterMandatory>N</ParameterMandatory>
      <ParameterUpdatable>always</ParameterUpdatable>
      <ParameterOrder>29</ParameterOrder>
      <ParameterHelp>
        <fr>Cette option permet de choisir un délais de réservation des fichiers joints
