<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>questionReply</name>
  <label>
    <fr>Questions/Réponses - Questions aux experts</fr>
    <en>Questions/Answers - Questions to experts</en>
  </label>
  <description>
    <fr>Permet de gérer la base de connaissances des questions posées par les utilisateurs
  vers les experts, localiser automatiquement l'expert apte à répondre à une question et gérer
  la distribution de la réponse vers les utilisateurs.
    </fr>
    <en>Create a knowledge database, with questions asked by users to experts. 
    The users can locate the experts that have the best chance of knowing the answer.
    The expert manage the diffusion of answers towards the users.
    </en>
  </description>
  <suite>
    <fr>03 Gestion de la connaissance</fr>
    <en>03 Knowledge management</en>
  </suite>
  <visible>true</visible>
  <portlet>true</portlet>
  <instanceClassName>com.silverpeas.questionReply.QuestionReplyInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">
      <fr>Animateur</fr>
      <en>Quizmaster</en>
    </profile>
    <profile name="publisher">
      <fr>Demandeur</fr>
      <en>Applicant</en>
    </profile>
    <profile name="writer">
      <fr>Expert</fr>
      <en>Expert</en>
    </profile>
    <profile name="user">
      <fr>Lecteur</fr>
      <en>Reader</en>
    </profile>
  </profiles>
  <parameters>
    <parameter>
      <name>privateRepliesUsed</name>
      <label>
        <fr>Utilisation des réponses privées</fr>
        <en>Private answers</en>
      </label>
      <order>1</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Possibilité de créer des réponses privées.</fr>
        <en>Experts can send private answers.</en>
      </help>
    </parameter>
    <parameter>
      <name>sortable</name>
      <label>
        <fr>Questions triées par ordre</fr>
        <en>Sort by questions</en>
      </label>
      <order>2</order>
      <mandatory>false</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Possibilité de trier les questions.</fr>
        <en>Questions are sortable.</en>
      </help>
    </parameter>
  </parameters>
</WAComponent>
