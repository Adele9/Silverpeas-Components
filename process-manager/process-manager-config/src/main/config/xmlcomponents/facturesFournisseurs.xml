  <description>Permet de gérer les factures fournisseurs</description>
  <suite>05 Workflow</suite>
  <visible>yes</visible>
   <portlet>no</portlet>
  <instanceClassName>com.silverpeas.processManager.ProcessManagerInstanciator</instanceClassName>
<!-- A modifier : -->
	<Profiles>
    <Profile name="Controleurs_Compta">Ass. Compta</Profile>

    <Profile name="Controleurs_Achats">Ass. Achats</Profile>
