<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>demandeCongesSimple</name>
  <label>
    <fr>Demande de congés simplifiée</fr>
    <en>Simple workflow to ask for a vacation leave</en>
  </label>
  <description>
    <fr>Processus : Demande de congés simplifiée</fr>
    <en>Workflow : ask for a vacation leave</en>
  </description>
  <suite>
    <fr>05 Workflow</fr>
    <en>05 Workflow</en>
  </suite>
  <visible>true</visible>
  <portlet>false</portlet>
  <router>RprocessManager</router>
  <instanceClassName>com.silverpeas.processManager.ProcessManagerInstanciator</instanceClassName>
  <profiles>
    <profile name="Employe">
      <fr>Collaborateur</fr>
      <en>Employee</en>
    </profile>
    <profile name="Responsable">
      <fr>Responsable</fr>
      <en>Manager</en>
    </profile>
    <profile name="supervisor">
      <fr>Superviseur</fr>
      <en>Supervisor</en>
    </profile>
  </profiles>
  <parameters>
    <parameter>
      <name>XMLFileName</name>
      <label>
        <fr>Modèle abstrait</fr>
        <en>Abstract model</en>
      </label>
      <order>1</order>
      <mandatory>true</mandatory>
      <value>DemandeCongesSimple/DemandeCongesSimple.xml</value>
      <type>text</type>
      <updatable>always</updatable>
      <help>
        <fr>Nom du fichier XML contenant le modèle du processsus.</fr>
        <en>XMl file containing the model of the workflow.</en>  
      </help>
    </parameter>
    <parameter>
      <name>exportCSV</name>
      <label>
        <fr>Export CSV</fr>
        <en>CSV export</en>
      </label>
      <order>2</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Export des données sous forme d'un fichier CSV.</fr>
        <en>Exporting the workflow data in a CSV file.</en>  
      </help>
    </parameter>
    <parameter>
      <name>fieldsToExport</name>
      <label>
        <fr>Champs à exporter</fr>
        <en>Fields to export</en>
      </label>
      <order>3</order>
      <mandatory>false</mandatory>
      <value></value>
      <type>text</type>
      <updatable>always</updatable>
      <help>
        <fr>Les champs du workflow à exporter.</fr>
        <en>The fields to be exported.</en>  
      </help>
    </parameter>
  </parameters>
</WAComponent>
