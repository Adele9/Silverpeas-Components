<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>yellowpages</name>
  <label>
    <fr>Contacts</fr>
    <en>Yellow pages directory</en>
  </label>
  <description>
    <fr>Permet de créer un annuaire de contact. Un formulaire XML associé décrit l'identité
  de chaque membre de l'annuaire, ainsi que tout autre caractéristique.
    </fr>
    <en>Create a contact directory whith an XML form describing all the inos on every member of the directory.</en>
  </description>
  <suite>
    <fr>02 Gestion Collaborative</fr>
    <en>02 Collaborative Management</en>
  </suite>
  <visible>true</visible>
  <visibleInPersonalSpace>true</visibleInPersonalSpace>
  <portlet>true</portlet>
  <instanceClassName>com.stratelia.webactiv.yellowpages.YellowpagesInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">
      <fr>Gestionnaire</fr>
      <en>Administrator</en>
    </profile>
    <profile name="publisher">
      <fr>Publieur</fr>
      <en>Publisher</en>
    </profile>
    <profile name="user">
      <fr>Lecteur</fr>
      <en>Reader</en>
    </profile>
  </profiles>
</WAComponent>
