<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component file:///home/ehugonnet/silverpeas_dev/core/config-core/src/main/config/xmlcomponents/component.xsd">
  <name>infoLetter</name>
  <label>
    <fr>Lettre informative</fr>
    <en>Information letter</en>
  </label>
  <description>
    <fr>Permet de créer une lettre d'information périodique, suivant un modèle de publication ré-utilisable. Gère les abonnements à la lettre.</fr>
    <fr>Create a periodic information according to a publication template re-usable. The subscritpions to thee letter are managed here also.</fr>
  </description>
  <suite>
    <fr>04 Gestion de contenu</fr>
    <en>04 Content Management</en>
  </suite>
  <visible>Y</visible>
  <portlet>Y</portlet>
  <instanceClassName>com.stratelia.silverpeas.infoLetter.InfoLetterInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">Gestionnaire</profile>
    <profile name="publisher">Publieur</profile>
    <profile name="user">Lecteur</profile>
  </profiles>
  <parameters>
    <parameter>
      <name>usePdc</name>
      <label>
        <fr>Classification PDC</fr>
        <en>Classification Scheme</en>
      </label>
      <order>1</order>
      <mandatory>Y</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Les newsletter créées au sein de cette instance pourront être classées sur le Plan de Classement</fr>
        <en>Newsletters created here are classified on the classification scheme.</en>
      </help>
    </parameter>
  </parameters>
</WAComponent>
