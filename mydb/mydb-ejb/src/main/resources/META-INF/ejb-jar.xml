<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <description>no description</description>
  <display-name>MyDBJar</display-name>
  <enterprise-beans>
    <session>
      <description>no description</description>
      <display-name>ejb/MyDBBm</display-name>
      <ejb-name>ejb/MyDBBm</ejb-name>
      <home>com.silverpeas.mydb.control.ejb.MyDBBmHome</home>
      <remote>com.silverpeas.mydb.control.ejb.MyDBBm</remote>
      <ejb-class>com.silverpeas.mydb.control.ejb.MyDBBmEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
	    <resource-ref>
		  	<res-ref-name>jdbc/Silverpeas</res-ref-name>
			  <res-type>javax.sql.DataSource</res-type>
  			<res-auth>Container</res-auth>
	    </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
	      <ejb-name>ejb/MyDBBm</ejb-name>
	      <method-name>*</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>