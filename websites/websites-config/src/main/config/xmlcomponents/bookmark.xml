<WAComponent xmlns="http://silverpeas.org/xml/ns/component"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://silverpeas.org/xml/ns/component file:///home/ehugonnet/silverpeas_dev/core/config-core/src/main/config/xmlcomponents/component.xsd">
  <name>bookmark</name>
  <label>
    <fr>Annuaire de sites</fr>
    <en>Bookmarks</en>
  </label>
  <description>
    <fr>Permet de gérer un référentiel de sites Internet remarquables sur un thème donné.</fr>
    <en>Manage bookmarks on a specific topic.</en>
  </description>
  <suite>
    <fr>04 Gestion de contenu</fr>
    <en>04 Content Management</en>
  </suite>
  <visible>Y</visible>
  <portlet>Y</portlet>
  <instanceClassName>com.stratelia.webactiv.webSites.WebSitesInstanciator</instanceClassName>
  <profiles>
    <profile name="Admin">
      <fr>Gestionnaire</fr>
      <en>Administrator</en>
    </profile>
    <profile name="Publisher">
      <fr>Publieur</fr>
      <en>Publisher</en>
    </profile>
    <profile name="Reader">
      <fr>Lecteur</fr>
      <en>Reader</en>
    </profile>
  </profiles>
  <parameters>
    <parameter>
      <name>usePdc</name>
      <label>
        <fr>Classification PDC</fr>
        <en>Classification Scheme</en>
      </label>
      <order>1</order>
      <mandatory>Y</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Les liens saisis au sein de cette instance pourront être classés sur le Plan de Classement</fr>
        <en>The bookmarks will be classified on the classification scheme.</en>
      </help>
    </parameter>
    <parameter>
      <name>sortedTopics</name>
      <label>
        <fr>Thèmes liens ordonnés</fr>
        <en>Topics/Links sorted</en>
      </label>
      <order>2</order>
      <mandatory>Y</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Ce paramètre permet d'ordonner les thèmes et les liens.</fr>
        <en>This parameter allows to order topics and links.</en>
      </help>
    </parameter>
  </parameters>
</WAComponent>
