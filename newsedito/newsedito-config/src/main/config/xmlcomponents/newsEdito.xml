<WAComponent>
   <name>newsEdito</name>
   <label>Editorial - Journal périodique</label>
   <description>Permet de créer un journal d'entreprise, contenant des articles, éditoriaux, première page.</description>
   <suite>04 Gestion de contenu</suite>
   <visible>@ComponentVisibleNewsEdito@</visible>
   <portlet>yes</portlet>
   <instanceClassName>com.stratelia.webactiv.newsEdito.NewsEditoInstanciator</instanceClassName>
   <tableList>
     <tabletpl>titles</tabletpl>
     <tabletpl>articles</tabletpl>
   </tableList>
  <Profiles>
		<Profile name="admin">Gestionnaire</Profile>
		<Profile name="publisher">Rédacteur</Profile>
    <Profile name="user">Lecteur</Profile>
  </Profiles>
</WAComponent>
